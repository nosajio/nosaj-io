doctype html
html
  include /includes/head
  body.landing-view
    include /includes/navigation
    main.main-frame
      section.landing-top
        div.landing-top__intro
          each line in introText
            p= line
        include actions
      section.posts
        each post in posts
          article.posts__post
            a(href=`/r/${post.slug}`)
              h1.post__posts-title= post.title 
      section.landing-kindness
        include quotes
  include /includes/footer
